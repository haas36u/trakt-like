{% extends 'base.html.twig' %}

{% block body %}
    <h1>Movies list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Slug</th>
                <th>Releasedate</th>
                <th>Runtime</th>
                <th>Shortplot</th>
                <th>Longplot</th>
                <th>Poster</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for movie in movies %}
            <tr>
                <td><a href="{{ path('movie_show', { 'id': movie.id }) }}">{{ movie.id }}</a></td>
                <td>{{ movie.title }}</td>
                <td>{{ movie.slug }}</td>
                <td>{% if movie.releaseDate %}{{ movie.releaseDate|date('Y-m-d') }}{% endif %}</td>
                <td>{{ movie.runtime }}</td>
                <td>{{ movie.shortPlot }}</td>
                <td>{{ movie.longPlot }}</td>
                <td>{{ movie.poster }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('movie_show', { 'id': movie.id }) }}">show</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
